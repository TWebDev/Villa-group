@model ePlatBack.Models.ViewModels.RentersModel.SearchRenters

@using (Ajax.BeginForm("SearchRenters", "Reports", new AjaxOptions { OnSuccess = "REPORT.searchResultsTable(data);REPORT.addExtras();", UpdateTargetId = "divTblRenters" }, new { id = "frmSearchRenters", onSubmit = "return UI.showValidationSummary(this.id);" }))
{
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.SearchRenter_I_ArrivalDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.SearchRenter_I_ArrivalDate, new { data_uses_date_picker = "true" })
            @Html.TextBoxFor(model => model.SearchRenter_F_ArrivalDate, new { data_uses_date_picker = "true" })
        </div>
    </div>
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.SearchRenter_Resorts)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SearchRenter_Resorts, Model.SearchRenter_DrpResorts, new { multiple = "multiple" })
        </div>
    </div>
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.SearchRenter_LeadSources)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SearchRenter_LeadSources, Model.SearchRenter_DrpLeadSources, new { multiple = "multiple" })
        </div>
    </div>
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.SearchRenter_BookingStatus)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SearchRenter_BookingStatus, Model.SearchRenter_DrpBookingStatus, new { multiple = "multiple" })
        </div>
    </div>
    <div class="editor-alignment align-from-top">
        <div class="editor-field">
            <input type="submit" class="button" value="search" />
            <input type="reset" class="button" value="reset" />
        </div>
    </div>
    <div class="align-from-top" id="divTblRenters">
        <table>
            <thead>
                <tr>
                    <th>Assigned to User</th>
                    <th>Leads Contacted</th>
                    <th>Leads Booked</th>
                    <th>Booking Percentage</th>
                    <th>Total Paid</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}