@model ePlatBack.Models.ViewModels.CommissionsReportModel.SearchCommissionsReportModel

@using (Ajax.BeginForm("SearchCommissions", "Reports", new AjaxOptions { UpdateTargetId = "divCommissionsResults", OnSuccess = "REPORT.addExtras();" }, new { id = "frmSearchCommissions" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="non-printable search-params">
        <div class="editor-alignment">
            <div class="editor-label">
                @Html.LabelFor(model => model.Search_I_FromDate)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Search_I_FromDate, new { data_uses_date_picker = "true" })
                @Html.TextBoxFor(model => model.Search_F_ToDate, new { data_uses_date_picker = "true" })
            </div>
        </div>
        <div class="editor-alignment">
            <div class="editor-label">
                @Html.LabelFor(model => model.Search_TerminalID)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Search_TerminalID, Model.Search_Terminals, new { @class = "terminal-dependent-list onchange", data_route = "/crm/Reports/GetDDLData", data_route_parameter = "selectedTerminals", data_onchange_route_parameter = "pointOfSale,agentsWithCommission", data_dependent_list = "Search_PointOfSaleID,Search_SalesAgentID" })
            </div>
        </div>
        <div class="editor-alignment">
            <div class="editor-label">
                @Html.LabelFor(model => model.Search_PointOfSaleID)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Search_PointOfSaleID, Model.Search_PointsOfSale, new { multiple = "multiple" })
            </div>
        </div>
        <div class="editor-alignment">
            <div class="editor-label">
                @Html.LabelFor(model => model.Search_SalesAgentID)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Search_SalesAgentID, Model.Search_SalesAgents, new { multiple = "multiple" })
            </div>
        </div>
        <div class="editor-alignment">
            <div class="editor-label">
                @Html.LabelFor(model => model.Search_ReportType)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Search_ReportType, Model.Search_ReportTypes)
            </div>
        </div>
        @Html.HiddenFor(model => model.Search_Cache)
        @*<div class="editor-alignment">
            <div class="editor-label">
                @Html.LabelFor(model => model.Search_Cache)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.Search_Cache)
            </div>
        </div>*@
        
        <div class="editor-alignment align-from-top">
            <div class="editor-field">
                <input type="submit" class="button" value="get" />
            </div>
        </div>
    </div>
    <div id="divCommissionsResults" class="align-from-top">
    </div>
}