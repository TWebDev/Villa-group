@model ePlatBack.Models.ViewModels.DiamanteModel.SearchDiamante

@using (Ajax.BeginForm("SearchDiamante", "Reports", new AjaxOptions { OnComplete = "UI.applyFormat(\"currency\");UI.applyFormat(\"percentage\")", OnSuccess = "REPORT.searchResultsTable(data)", UpdateTargetId = "divTblDiamanteResults" }, new { id = "frmSearchDiamante" }))
{
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.SearchDiamante_I_ArrivalDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.SearchDiamante_I_ArrivalDate, new { data_uses_date_picker = "true" })
            @Html.TextBoxFor(model => model.SearchDiamante_F_ArrivalDate, new { data_uses_date_picker = "true" })
        </div>
    </div>
<div class="editor-alignment">
    <div class="editor-label">
        @Html.LabelFor(model => model.SearchDiamante_LeadSources)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.SearchDiamante_LeadSources, Model.SearchDiamante_DrpLeadSources, new { multiple = "multiple" })
    </div>
</div>
<div class="editor-alignment">
    <div class="editor-label">
        @Html.LabelFor(model => model.SearchDiamante_Resorts)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.SearchDiamante_Resorts, Model.SearchDiamante_DrpResorts, new { multiple = "multiple" })
    </div>
</div>
<div class="editor-alignment">
    <div class="editor-label">
        @Html.LabelFor(model => model.SearchDiamante_AssignedToUser)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.SearchDiamante_AssignedToUser, Model.SearchDiamante_DrpAssignedToUsers, new { multiple = "multiple" })
    </div>
</div>
<div class="editor-alignment">
    <div class="editor-field">
        <input type="submit" class="button" value="search" />
    </div>
</div>
<div id="divTblDiamanteResults" class="align-from-top">
    <table id="tblSearchDiamanteResults" class="table">
        <thead>
            <tr>
                <th>Agent Name</th>
                <th>Total Leads</th>
                <th># Opportunities</th>
                <th># Tours Booked</th>
                <th>Booking Percentage</th>
                <th>Tours</th>
                <th>Tours Percentage</th>
                <th>Options Volume</th>
                <th>Timeshare Volume</th>
                <th>Qualified Tours</th>
                <th>Q Factor</th>
                <th>Capture Percentage</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
}
