@model ePlatBack.Models.ViewModels.SalesByTeam.SearchSalesByTeam

@using (Ajax.BeginForm("SearchSalesByTeam", "Reports", new AjaxOptions { OnSuccess = "REPORT.addExtras();", UpdateTargetId = "SearchSalesByTeamResult" }, new { id = "frmSearchSalesByTeam" }))
{    
    <div class=" non-printable search-params">
        <div class=" editor-alignment">
            <div class=" editor-label">
                @Html.LabelFor(model => model.Search_I_FromDate)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Search_I_FromDate, new { @class = "DateSalesByTeam" })
            </div>
        </div>
        <div class=" editor-alignment">
            <div class=" editor-label">
                @Html.LabelFor(model => model.Search_F_ToDate)
            </div>
            <div class=" editor-field">
                @Html.TextBoxFor(model => model.Search_F_ToDate, new { @class = "DateSalesByTeam" })
            </div>
        </div>
        <div class=" editor-alignment">
            <div class=" editor-label">
                @Html.LabelFor(model => model.SearchTerminalID)
            </div>
            <div class=" editor-field">
                @Html.DropDownListFor(model => model.SearchTerminalID, Model.fillDropTerminals, new 
                {                    
                    @class = "terminal-dependent-list",
                    data_route = "/Catalogs/GetDDLData",
                    data_route_parameter = "selectedTerminals"
                })
            </div>
        </div>
        <div class=" editor-alignment">
            <div class=" editor-label">
                @Html.LabelFor(model => model.SearchCurrency)
            </div>
            <div class=" editor-field">
                @Html.DropDownListFor(model => model.SearchCurrency, Model.Currencies)
            </div>
        </div>
        <div class="editor-alignment">
            <div class="editor-field">
                <input type="reset" class="button" value="Reset" />
                <input type="submit" class="button" value="Search" />
            </div>
        </div>
    </div>
    <div id="SearchSalesByTeamResult">
    </div>
}
