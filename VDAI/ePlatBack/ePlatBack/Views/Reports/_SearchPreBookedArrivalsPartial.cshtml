@model ePlatBack.Models.ViewModels.PreBookedArrivalsModel.SearchPreBookedArrivalsModel

@using (Ajax.BeginForm("SearchPreBookedArrivals", "Reports", new AjaxOptions { OnSuccess = "REPORT.searchResultsTable(data)", UpdateTargetId = "divTblPreBookedArrivalsResults" }, new { id = "frmSearchPreBookedArrivals" }))
{
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.GenericSearchFieldsReport_I_ArrivalDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.GenericSearchFieldsReport_I_ArrivalDate, new { data_uses_date_picker = "true" })
            @Html.TextBoxFor(model => model.GenericSearchFieldsReport_F_ArrivalDate, new { data_uses_date_picker = "true" })
        </div>
    </div>
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.SearchPreBooked_I_PurchaseDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.SearchPreBooked_I_PurchaseDate, new { data_uses_date_picker = "true" })
            @Html.TextBoxFor(model => model.SearchPreBooked_F_PurchaseDate, new { data_uses_date_picker = "true" })
        </div>
    </div>
    @*<div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.GenericSearchFieldsReport_BookingStatus)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.GenericSearchFieldsReport_BookingStatus, Model.GenericSearchFieldsReport_DrpBookingStatus, new { style = "height:68px", @class = "workgroup-dependent-list", data_route = "/crm/Reports/GetDDLData", data_route_parameter = "bookingStatusID", multiple = "multiple" })
        </div>
    </div>*@
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.GenericSearchFieldsReport_LeadSource)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.GenericSearchFieldsReport_LeadSource, Model.GenericSearchFieldsReport_DrpLeadSources, new { style = "height:68px", multiple = "multiple", @class = "workgroup-dependent-list", data_route = "/crm/Reports/GetDDLData", data_route_parameter = "leadSourceID" })
        </div>
    </div>
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.GenericSearchFieldsReport_Resort)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.GenericSearchFieldsReport_Resort, Model.GenericSearchFieldsReport_DrpResorts, new { style = "height:68px", multiple = "multiple", @class = "terminal-dependent-list", data_route = "/crm/Reports/GetDDLData", data_route_parameter = "placeID" })
        </div>
    </div>
    <div class="editor-alignment">
        <div class="editor-label">
            @Html.LabelFor(model => model.SearchPreBooked_HasOptions)
        </div>
        <div class="editor-field">
            <label for="SearchPreBooked_HasOptions">Yes</label>
            @Html.RadioButtonFor(model => model.SearchPreBooked_HasOptions, true)
            <label for="SearchPreBooked_HasOptions">No</label>
            @Html.RadioButtonFor(model => model.SearchPreBooked_HasOptions, false)
        </div>
    </div>
    <div class="editor-alignment align-from-top">
        <div class="editor-field">
            <input type="reset" class="button" id="btnClearForm" value="reset" />
            <input type="submit" class="button align-from-left" id="btnSearchPreBookedArrivals" value="search" />
        </div>
    </div>
    <div id="divTblPreBookedArrivalsResults" class="align-from-top">
        <table id="tblSearchPreBookedArrivalsResults" class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Arrival Date</th>
                    <th>Resort</th>
                    <th>Booking Status</th>
                    <th>Lead Source</th>
                    <th>User</th>
                    <th>Status</th>
                    <th>Total Paid</th>
                    <th>Sales Volume</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
}