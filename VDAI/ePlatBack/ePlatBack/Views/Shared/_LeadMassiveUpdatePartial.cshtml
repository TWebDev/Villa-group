@model ePlatBack.Models.ViewModels.MassUpdate
@{
    //var Privileges = ViewData["Privileges"] as List<ePlatBack.Models.ViewModels.SysComponentsPrivilegesModel>;
    var Privileges = Model.Privileges;
}
@if (Privileges.FirstOrDefault(m => m.Component == "fdsMassUpdate") == null || Privileges.FirstOrDefault(m => m.Component == "fdsMassUpdate").View)
{
    <fieldset id="fdsMassUpdate" class="non-printable">
        <legend>
            <a href="javascript:void(0)" class="legendLink">
                <img class="fieldset-indicator" border="0" src="/Content/themes/base/images/eplat_show.jpg" />
                Lead Mass Update
            </a>
        </legend>
        <div style="display: none">
            @if (Privileges.FirstOrDefault(m => m.Component == "frmMassUpdate") == null || Privileges.FirstOrDefault(m => m.Component == "frmMassUpdate").View)
            {
                using (Ajax.BeginForm("MassUpdate", "PreArrival", new AjaxOptions { OnSuccess = "MASSUPDATE.massUpdateSuccess(data)" }, new { id = "frmMassUpdate" }))
                {
                    <div class="editor-alignment full-width">
                        <div class="editor-label">
                            @Html.HiddenFor(model => model.MassUpdate_Coincidences, new { @class = "mass-update-coincidences", data_keep_value = "true" })
                            @Html.LabelFor(model => model.MassUpdate_Terminal)
                        </div>
                        <div class="editor-field">
                            @Html.DropDownListFor(model => model.MassUpdate_Terminal, Model.MassUpdate_DrpTerminals)
                        </div>
                    </div>
                    @*<h4 id="spanSelectedLeads" class="span-selected-leads" style="font-weight:bold;"></h4>*@
                    <h4 class="span-selected-leads" style="font-weight:bold;"></h4>
                    <section style="border: 1px solid #DDDDDD; clear: both; margin: 20px 0px 0px 0; padding: 40px 15px 12px; border-radius: 0px 0px 7px 7px; width: auto">
                        <h4>Fields To Update</h4>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.MassUpdate_BookingStatus)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.MassUpdate_BookingStatus, Model.BookingStatus)
                            </div>
                        </div>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.MassUpdate_LeadSource)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.MassUpdate_LeadSource, Model.MassUpdate_DrpLeadSources)
                            </div>
                        </div>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.MassUpdate_LeadStatus)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.MassUpdate_LeadStatus, Model.MassUpdate_DrpLeadStatus)
                            </div>
                        </div>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.MassUpdate_AssignedToUser)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.MassUpdate_AssignedToUser, Model.Users)
                            </div>
                        </div>
                        <div class="editor-alignment full-width">
                            <input type="button" id="btnMassUpdate" class="submit-right" value="save" />
                        </div>
                    </section>
                }
            }
            @if (Privileges.FirstOrDefault(m => m.Component == "frmMassInsert") == null || Privileges.FirstOrDefault(m => m.Component == "frmMassInsert").View)
            {
                using (Ajax.BeginForm("MassInsert", "PreArrival", new AjaxOptions { OnSuccess = "MASSUPDATE.massUpdateSuccess(data)" }, new { id = "frmMassInsert" }))
                {

                    <section style="border: 1px solid #DDDDDD; clear: both; margin: 20px 0px 0px 0; padding: 40px 15px 12px; border-radius: 0px 0px 7px 7px; width: auto">
                        <h4>Fields To Insert</h4>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.HiddenFor(model => model.MassUpdate_Coincidences, new { @class = "mass-update-coincidences" })
                                @Html.LabelFor(model => model.InteractionTypeID)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.InteractionTypeID, Model.InteractionTypes)
                            </div>
                        </div>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.BookingStatusID)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.BookingStatusID, Model.BookingStatus)
                            </div>
                        </div>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.InteractedWithUserID)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.InteractedWithUserID, Model.Users)
                            </div>
                        </div>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.InteractionComments)
                            </div>
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.InteractionComments)
                            </div>
                        </div>
                        <div class="editor-alignment full-width">
                            <input type="button" id="btnMassInsert" class="submit-right" value="save" />
                        </div>
                    </section>
                }
            }
            @if (Privileges.FirstOrDefault(m => m.Component == "frmMassSending") == null || Privileges.FirstOrDefault(m => m.Component == "frmMassSending").View)
            {
                using (Ajax.BeginForm("MassSending", "PreArrival", new AjaxOptions { OnSuccess = "MASSUPDATE.massUpdateSuccess(data)" }, new { id = "frmMassSending" }))
                {

                    <section style="border: 1px solid #DDDDDD; clear: both; margin: 20px 0px 0px 0; padding: 40px 15px 12px; border-radius: 0px 0px 7px 7px; width: auto">
                        <h4>Mass Confirmation Letter Send</h4>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.HiddenFor(model => model.MassUpdate_Coincidences, new { @class = "mass-update-coincidences" })
                                @Html.HiddenFor(model => model.MassUpdate_SendingEvent)
                            </div>
                        </div>
                        <div class="editor-alignment full-width" style="text-align:center">
                            <span class="editor-label" style="text-transform:uppercase">Confirmation Letters</span>
                            <div class="editor-field">
                                The letters will be send based on each selected lead's reservation information.
                            </div>
                        </div>
                        @*<div class="editor-alignment full-width">
                            <input type="button" class="submit-right send-confirmation mass-sending" value="send letters" />
                        </div>*@
                        <div class="editor-field" style="text-align:center !important;">
                            @if (Privileges.FirstOrDefault(m => m.Component == "btnMassMember") != null && Privileges.FirstOrDefault(m => m.Component == "btnMassMember").View == true)
                            {
                                <input type="button" class="button mass-sending" value="member update" data-sysevent="13" />
                            }
                            @if (Privileges.FirstOrDefault(m => m.Component == "btnMassGuestMember") != null && Privileges.FirstOrDefault(m => m.Component == "btnMassGuestMember").View == true)
                            {
                                <input type="button" class="button mass-sending" value="guest member" data-sysevent="14" />
                            }
                            @if (Privileges.FirstOrDefault(m => m.Component == "btnMassExchange") != null && Privileges.FirstOrDefault(m => m.Component == "btnMassExchange").View == true)
                            {
                                <input type="button" class="button mass-sending" value="exchange tour" data-sysevent="15" />
                            }
                            @if (Privileges.FirstOrDefault(m => m.Component == "btnMassDiamante") != null && Privileges.FirstOrDefault(m => m.Component == "btnMassDiamante").View == true)
                            {
                                <input type="button" class="button mass-sending" value="diamante" data-sysevent="27" />
                            }
                            @if (Privileges.FirstOrDefault(m => m.Component == "btnMassRenter") != null && Privileges.FirstOrDefault(m => m.Component == "btnMassRenter").View == true)
                            {
                                <input type="button" class="button mass-sending" value="renter intro" data-sysevent="41" />
                            }
                            @if (Privileges.FirstOrDefault(m => m.Component == "btnMassElite") != null && Privileges.FirstOrDefault(m => m.Component == "btnMassElite").View == true)
                            {
                                <input type="button" class="button mass-sending" value="Elite Transport" data-sysevent="42" />
                            }
                        </div>
                    </section>
                }
            }
            @*@using (Ajax.BeginForm("DuplicateLeads", "MasterChart", new AjaxOptions { OnSuccess = "LEAD_MASS_UPDATE.duplicateLeadsSuccess(data)" }, new { id = "frmDuplicateLeads" }))
                {
                    <h5>Duplicate Leads</h5>
                    <section style="border: 1px solid #DDDDDD; clear: both; margin: 20px 0px 0px 0; padding: 40px 15px 12px; border-radius: 0px 0px 7px 7px; width: auto">
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.HiddenFor(model => model.MassUpdate_Coincidences, new { @class = "mass-update-coincidences" })
                                @Html.LabelFor(model => model.DuplicateLeadsModel.DuplicateLeads_LeadStatus)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.DuplicateLeadsModel.DuplicateLeads_LeadStatus, Model.DuplicateLeadsModel.DuplicateLeads_DrpLeadStatus)
                            </div>
                        </div>
                        <div class="editor-alignment">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.DuplicateLeadsModel.DuplicateLeads_AssignToUser)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.DuplicateLeadsModel.DuplicateLeads_AssignToUser, Model.DuplicateLeadsModel.DuplicateLeads_DrpAssignToUser)
                            </div>
                        </div>
                        <div class="editor-alignment full-width">
                            <p>
                                <input type="button" id="btnDuplicateLeads" class="submit right" value="save" />
                            </p>
                        </div>
                    </section>
                }*@
        </div>
    </fieldset>
}

