                        @if (Privileges.FirstOrDefault(m => m.Component == "btnSavePicturesOnGallery") == null || Privileges.FirstOrDefault(m => m.Component == "btnSavePicturesOnGallery").View)
                        {
                            <p class="full-width gallery-save-button">
                                <input type="button" id="btnSavePicturesOnGallery" class="submit right btn-save-pictures-on-gallery" value="save" />
                            </p>
                        }
                    </div>
                }
            </div>
        @*</div>
    </fieldset>*@
}