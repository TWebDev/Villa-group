@model ePlatBack.Models.ViewModels.BudgetsModel.SearchBudgetsModel

<fieldset id="fdsBudgetsManagement">
    <legend>
        <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator" />
        Budgets Management
    </legend>
    <div class="align-from-top">
        <p class="full-width align-from-bottom">
            <input type="button" id="btnNewBudgetsInfo" class="submit fieldset-expander right" value="new" />
        </p>
        @using (Ajax.BeginForm("SearchBudgets", "Catalogs", new AjaxOptions { OnSuccess = "CATALOG.budgetsResultsTable(data)", OnComplete = "CATALOG.makeBudgetsSelectable()", UpdateTargetId = "divTblExistingBudgets" }, new { id = "frmBudgetsSearch" }))
        {
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.SearchBudget_LeadCode)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.SearchBudget_LeadCode, new { maxlength = "1" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.SearchBudget_LeadQualification)
                </div>
                <div class="editor-field">
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.SearchBudget_LeadQualification)
                    </div>
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.SearchBudget_I_Date)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.SearchBudget_I_Date, new { data_uses_date_picker = "true" })
                    @Html.TextBoxFor(model => model.SearchBudget_F_Date, new { data_uses_date_picker = "true" })
                </div>
            </div>
            @*<div class="editor-alignment">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.SearchBudget_ToDate)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.SearchBudget_ToDate, new { data_uses_date_picker = "true" })
                    </div>
                </div>*@
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.SearchBudget_PromotionTeam)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.SearchBudget_PromotionTeam, Model.SearchBudget_DrpPromotionTeams, new { @class = "terminal-dependent-list", data_route = "/Catalogs/GetDDLData", data_route_parameter = "promotionTeam", multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment align-from-top">
                <div class="editor-field">
                    <input type="submit" id="btnSearchBudgets" class="right button search marg-left" value="search" />
                    <input type="reset" class="button right " value="reset" />
                </div>
            </div>
            <div id="divTblExistingBudgets" class="align-from-top">
                <table id="tblSearchBudgetsResults" class="dataTable table search-results">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Budget</th>
                            <th>Vigency</th>
                            <th>Is Extension</th>
                            <th>Promotion Team(s)</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>




        }
        @Html.Action("RenderBudgetsManagement", "Catalogs")
    </div>
</fieldset>