@model ePlatBack.Models.ViewModels.ReservationStatusInfoModel

<div class="full-width align-from-bottom">
    <input type="button" id="btnNewReservationStatus" class="submit right fieldset-expander" value="new" />
</div>
<div id="divReservationStatus">
</div>
<div class="full-width align-from-bottom">
    <input type="button" id="btnSaveReservationStatusPerWorkGroup" value="save" class="submit right" />
</div>
<fieldset id="fdsReservationStatusInfo">
    <legend>
        <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator" />
        Reservation Status Info
    </legend>
    <div class="align-from-top" style="display:none">
        @using (Ajax.BeginForm("SaveReservationStatus", "Admin", new AjaxOptions { OnSuccess = "PROFILE.saveReservationStatusSuccess(data)" }, new { id = "frmReservationStatus", onSubmit = "return UI.showValidationSummary(this.id);" }))
        {
            <div id="frmReservationStatus_ErrorMessages">
                @Html.ValidationMessageFor(m => m.ReservationStatusInfo_ReservationStatus)
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(m => m.ReservationStatusInfo_ReservationStatus)
                    @Html.HiddenFor(m => m.ReservationStatusInfo_ReservationStatusID)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.ReservationStatusInfo_ReservationStatus)
                </div>
            </div>
            <div class="full-width">
                <input type="submit" class="submit right" value="save" id="btnSaveReservationStatus" />
            </div>
        }
    </div>
</fieldset>
