@model ePlatBack.Models.ViewModels.VerificationAgreementInfoModel

<div class="full-width align-from-bottom">
    <input type="button" id="btnNewVerificationAgreement" class="submit right fieldset-expander" value="new" />
</div>
<div id="divVerificationAgreements">
</div>
<div class="full-width align-from-bottom">
    <input type="button" id="btnSaveVerificationAgreementsPerWorkGroup" value="save" class="submit right" />
</div>
<fieldset id="fdsVerificationAgreementsInfo">
    <legend>
        <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator" />
        Verification Agreement Info
    </legend>
    <div class="align-from-top" style="display:none">
        @using (Ajax.BeginForm("SaveVerificationAgreement", "Admin", new AjaxOptions { OnSuccess = "PROFILE.saveVerificationAgreementSuccess(data)" }, new { id = "frmVerificationAgreement", onSubmit = "return UI.showValidationSummary(this.id);" }))
        {
            <div id="frmVerificationAgreement_ErrorMessages">
                @Html.ValidationMessageFor(m => m.VerificationAgreementInfo_VerificationAgreement)
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(m => m.VerificationAgreementInfo_VerificationAgreement)
                    @Html.HiddenFor(m => m.VerificationAgreementInfo_VerificationAgreementID)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.VerificationAgreementInfo_VerificationAgreement)
                </div>
            </div>
            <div class="full-width">
                <input type="submit" class="submit right" value="save" id="btnSaveVerificationAgreement" />
            </div>
        }
    </div>
</fieldset>
