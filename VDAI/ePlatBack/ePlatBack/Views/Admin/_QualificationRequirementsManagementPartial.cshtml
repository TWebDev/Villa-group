@model ePlatBack.Models.ViewModels.QualificationRequirementInfoModel

<div class="full-width align-from-bottom">
    <input type="button" id="btnNewQualificationRequirement" class="submit right fieldset-expander" value="new" />
</div>
<div id="divQualificationRequirements">
</div>
<div class="full-width align-from-bottom">
    <input type="button" id="btnSaveQualificationRequirementsPerWorkGroup" value="save" class="submit right" />
</div>
<fieldset id="fdsQualificationRequirementsInfo">
    <legend>
        <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator" />
        Qualification Requirement Info
    </legend>
    <div class="align-from-top" style="display:none">
        @using (Ajax.BeginForm("SaveQualificationRequirement", "Admin", new AjaxOptions { OnSuccess = "PROFILE.saveQualificationRequirementSuccess(data)" }, new { id = "frmQualificationRequirement", onSubmit = "return UI.showValidationSummary(this.id);" }))
        {
            <div id="frmQualificationRequirement_ErrorMessages">
                @Html.ValidationMessageFor(m => m.QualificationRequirementInfo_QualificationRequirement)
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(m => m.QualificationRequirementInfo_QualificationRequirement)
                    @Html.HiddenFor(m => m.QualificationRequirementInfo_QualificationRequirementID)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.QualificationRequirementInfo_QualificationRequirement)
                </div>
            </div>
            <div class="full-width">
                <input type="submit" class="submit right" value="save" id="btnSaveQualificationRequirement" />
            </div>
        }
    </div>
</fieldset>
