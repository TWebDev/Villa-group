@model ePlatBack.Models.ViewModels.PlaceViewModel
@{
    ViewBag.Title = "ePlat > CMS > Places";
    Html.EnableClientValidation(true);
}
@section Head
{
    @*    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />*@
    <link href="/Content/jquery.dataTables.css" rel="stylesheet" type="text/css" />
    <link href="/Content/jquery-ui-1.8.14.custom.css" rel="stylesheet" type="text/css" />
    <link href="/Content/fineuploader.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery-ui-timepicker-addon.css" rel="stylesheet" type="text/css" />
}
@section Scripts
{
    <script type="text/javascript" src="//maps.google.com/maps/api/js?sensor=false"></script>
    <script src="@Url.Content("~/Scripts/jquery.dataTables.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/adapter-jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/config.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/styles.js")" type="text/javascript"></script>*@
    <script src="/Scripts/jquery.numeric.js" type="text/javascript"></script>
    <script src="/Scripts/cms/places/places.js" type="text/javascript"></script>
    <script src="/Scripts/cms/pictures.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-timepicker-addon.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.jstree.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.fineuploader-3.0.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.fineuploader-3.0.min.js" type="text/javascript"></script> 
}
<h1>Places Management</h1>
<div class="align-from-top">
    <fieldset id="fdsPlacesManagement">
        <legend>
            <img src="/Content/themes/base/images/eplat_show.jpg" id="showPlacesManagement" class="fieldset-indicator fds-indicator-separator">
            Places Management
        </legend>
        <div style="display: none" class="align-from-top">
            @Html.Partial("_SearchPlacesPartial", Model.PlacesSearchModel)
            @Html.Action("RenderPlaces", "Places")
            <fieldset id="fdsPlacesItems">
                <legend>
                    <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator"/>
                    Places-Related Items
                </legend>
                <div style="display: none">
                    <fieldset id="fdsZones" data-close-siblings="true">
                        <legend>
                            <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator"/>
                            Zones Management
                        </legend>
                        <div style="display: none">
                            @Html.Partial("_SearchZonesPartial", Model.ZonesSearchModel)
                            @Html.Partial("_ZonesManagementPartial", Model.ZoneInfoModel)
                        </div>
                    </fieldset>
                    <fieldset id="fdsPlaceTypes" data-close-siblings="true">
                        <legend>
                            <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator"/>
                            Place Types Management
                        </legend>
                        <div style="display: none">
                            @Html.Partial("_SearchPlaceTypesPartial", Model.PlaceTypesSearchModel)
                            @Html.Partial("_PlaceTypesManagementPartial", Model.PlaceTypeInfoModel)
                        </div>
                    </fieldset>
                    <fieldset id="fdsDestinations" data-close-siblings="true">
                        <legend>
                            <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator"/>
                            Destinations Management 
                        </legend>
                        <div style="display: none">
                            @Html.Partial("_SearchDestinationsPartial", Model.DestinationsSearchModel)
                            @Html.Partial("_DestinationsManagementPartial", Model.DestinationInfoModel)
                        </div>
                    </fieldset>
                    <fieldset id="fdsPlaceClasifications" data-close-siblings="true">
                        <legend>
                            <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator"/>
                            Place Clasifications Management
                        </legend>
                        <div style="display: none">
                            @Html.Partial("_SearchPlaceClasificationsPartial", Model.PlaceClasificationsSearchModel)
                            @Html.Partial("_PlaceClasificationsManagementPartial", Model.PlaceClasificationInfoModel)
                        </div>
                    </fieldset>
                    <fieldset id="fdsTransportationZones" data-close-siblings="true">
                        <legend>
                            <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator"/>
                            Transportation Zones Management
                        </legend>
                        <div style="display: none">
                            @Html.Partial("_SearchTransportationZonesPartial", Model.TransportationZonesSearchModel)
                            @Html.Partial("_TransportationZonesManagementPartial", Model.TransportationZoneInfoModel)
                        </div>
                    </fieldset>
                </div>
            </fieldset>
        </div>
    </fieldset>
</div>

