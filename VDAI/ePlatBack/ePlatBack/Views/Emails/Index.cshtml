@model ePlatBack.Models.ViewModels.EmailsViewModel

@{
    ViewBag.Title = "ePlat > Settings > Emails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Privileges"] = Model.Privileges;
}

@section Head{

}
@section Scripts{
    <script src="/Scripts/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/Scripts/settings/emails/emails.js" type="text/javascript"></script>
}

<h1>Emails Management</h1>
<div class="align-from-top">
    <fieldset id="fdsEmailsManagement">
        <legend>
            <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator" />
            Emails Management
        </legend>
        <div class="align-from-top" style="display:none">
            @Html.Partial("_SearchEmailsPartial", Model.EmailsSearchModel)
            @Html.Partial("_EmailsManagementPartial", Model.EmailInfoModel)
        </div>
    </fieldset>
    <fieldset id="fdsEmailNotificationsManagement">
        <legend>
            <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator" />
            Email Notifications Management
        </legend>
        <div class="align-from-top" style="display:none">
            @Html.Partial("_SearchEmailNotificationsPartial", Model.EmailNotificationsSearchModel)
            @Html.Partial("_EmailNotificationsManagementPartial", Model.EmailNotificationInfoModel)
        </div>
    </fieldset>
    <fieldset id="fdsFieldGroupsManagement">
        <legend>
            <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator" />
            Field Groups Management
        </legend>
        <div class="align-from-top" style="display:none">
            @Html.Partial("_SearchFieldGroupsPartial", Model.FieldGroupsSearchModel)
            @Html.Partial("_FieldGroupsManagementPartial", Model.FieldGroupsInfoModel)
        </div>
    </fieldset>
</div>