@model ePlatBack.Models.ViewModels.EmailNotificationInfoModel
@{
    var Privileges = ViewData["Privileges"] as List<ePlatBack.Models.ViewModels.SysComponentsPrivilegesModel>;
}

<fieldset id="fdsEmailNotificationsInfo" class="primary-selected-row-dependent">
    <legend>
        <img src="/Content/themes/base/images/eplat_show.jpg" class="fieldset-indicator fds-indicator-separator" />
        Email Notification Info
    </legend>
    <div class="align-from-top" style="display:none">
        @using (Ajax.BeginForm("SaveEmailNotification", "Emails", new AjaxOptions { OnSuccess = "EMAIL.saveEmailNotificationSuccess(data)" }, new { id = "frmEmailNotificationsInfo", onSubmit = "return UI.showValidationSummary(this.id);" }))
        {
            <div id="frmEmailNotifications_ErrorMessage" style="display:none">

            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_Terminal)
                    @Html.HiddenFor(model => model.EmailNotificationInfo_EmailNotificationID)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_Terminal, Model.EmailNotificationInfo_DrpTerminals, new { @class = "terminal-dependent-list", data_route = "/Emails/GetDDLData", data_route_parameter = "activeTerminals" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_Email)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_Email, Model.EmailNotificationInfo_DrpEmails)
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_Event)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_Event, Model.EmailNotificationInfo_DrpEvents)
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_ReplyTo)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.EmailNotificationInfo_ReplyTo, new { data_format = "lower-case", placeholder = "empty = sender" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_EmailAccounts)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.EmailNotificationInfo_EmailAccounts, new { placeholder = "comma(,) separated", data_format = "lower-case" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_Destinations)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_Destinations, Model.EmailNotificationInfo_DrpDestinations, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_Resorts)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_Resorts, Model.EmailNotificationInfo_DrpResorts, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_LeadSources)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_LeadSources, Model.EmailNotificationInfo_DrpLeadSources, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_LeadStatus)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_LeadStatus, Model.EmailNotificationInfo_DrpLeadStatus, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_BookingStatus)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_BookingStatus, Model.EmailNotificationInfo_DrpBookingStatus, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_PreBookingStatus)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_PreBookingStatus, Model.EmailNotificationInfo_DrpPreBookingStatus, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_BrokerContracts)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_BrokerContracts, Model.EmailNotificationInfo_DrpBrokerContracts, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_RequiredFields)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_RequiredFields, Model.EmailNotificationInfo_DrpRequiredFields, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_PointsOfSale)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EmailNotificationInfo_PointsOfSale, Model.EmailNotificationInfo_DrpPointsOfSale, new { multiple = "multiple" })
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_Description)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.EmailNotificationInfo_Description)
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_CopyLead)
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.EmailNotificationInfo_CopyLead)
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_CopySender)
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.EmailNotificationInfo_CopySender)
                </div>
            </div>
            <div class="editor-alignment">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EmailNotificationInfo_IsActive)
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.EmailNotificationInfo_IsActive)
                </div>
            </div>
            <div class="align-from-top full-width">
                <input type="submit" id="btnSaveEmailNotification" class="submit right" value="save" />
            </div>
        }
    </div>
</fieldset>
