@model ePlatBack.Models.ViewModels.ArrivalsViewModel.SearchArrivalsForecast

@using (Ajax.BeginForm("SearchArrivalsForecast", "Hostess", new AjaxOptions { UpdateTargetId = "divArrivalsForecastResults", OnSuccess = "Hostess.forecastUpdated();" }, new { id = "frmSearchArrivalsForecast" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="non-printable search-params">
        <div class="editor-alignment">
            <div class="editor-label">
                @Html.LabelFor(model => model.SearchForecast_I_ArrivalDate)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.SearchForecast_I_ArrivalDate, new { data_uses_date_picker = "true" })
                @Html.TextBoxFor(model => model.SearchForecast_F_ArrivalDate, new { data_uses_date_picker = "true" })
            </div>
        </div>
        <div class="editor-alignment align-from-top">
            <div class="editor-field">
                <input type="submit" class="button" id="btnGetForecast" value="get" />
            </div>
        </div>
    </div>
    <div id="divArrivalsForecastResults" class="align-from-top">
    </div>
}
