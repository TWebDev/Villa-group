<!DOCTYPE html>
<html lang="@ViewBag.Culture">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My Experience Tours</title>
    <link href="~/content/themes/mex/images/favicon.png" rel="shortcut icon" type="image/x-icon" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="description" content="@ViewBag.Description">
    <meta name="robots" content="@ViewBag.Index, @ViewBag.Follow">
    @if (ViewBag.CanonicalDomain != null)
    {
    <link rel="canonical" href="https://@(ViewBag.CanonicalDomain + ViewBag.FriendlyUrl)" />
    }
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/css/materialize.min.css">*@
    <link href="~/Content/plugins/materialize/css/materialize.min.css" rel="stylesheet" />
    <link href="~/Content/themes/mex/css/main2.css" rel="stylesheet" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />

    @RenderSection("header", required: false)
</head>
<body>
    @*onload="_googWcmGet('phone-desktop', '1-877-359-0443')"*@
    @RenderSection("afterBody", required: false)
    <header>
        <div class="navbar-fixed">
            <nav class="nav-extended light-green darken-2">
                <div class="nav-wrapper container">

                    <a href="/" class="brand-logo">
                        <img src="@ViewBag.Logo" class="responsive-img" alt="Home" />
                    </a>
                    <a href="#" data-activates="mobile-menu" class="button-collapse"><i class="material-icons">menu</i></a>

                    @if (ViewBag.OppositeLanguageUrl != null)
                    {
                        @Html.Raw(ViewBag.Header.Replace(".com", ".com" + ViewBag.OppositeLanguageUrl))
                    }

                    <div class="nav-content hide-on-med-and-down">
                        <ul id="navTabs" class="tabs tabs-transparent">
                            <li class="tab"><a target="_self" class="active" href="/">Home</a></li>
                            <li class="tab"><a class="btnLandActivities" href="#land-activities">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Land_Activities</a></li>
                            <li class="tab"><a class="btnWaterActivities" href="#water-activities">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Water_Activities</a></li>
                            <li class="tab hide"><a target="_self" href="/car-rental">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Car_Rental</a></li>

                            <li class="tab hide"><a target="_self" href="/transportation">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Transportation</a></li>
                            <li class="tab hide"><a target="_self" href="/travel-guide">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Travel_Guide</a></li>
                            <li class="tab">
                                <a class="modal-trigger" href="#search-activities"><i class="material-icons right">search</i>@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Search</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <main>
        <div id="land-activities" class="submenu light-green darken-4" style="display:none;">
            <div class="container">
                <div class="row card-panel transparent z-depth-0">
                    @Html.Raw(@ViewBag.Submenu1)
                    <a id="btnCloseLandActivities" class="btn-floating btn-large waves-effect waves-light red right"><i class="material-icons">expand_less</i></a>
                </div>
            </div>
        </div>
        <div id="water-activities" class="submenu light-green darken-4" style="display:none;">
            <div class="container">
                <div class="row card-panel transparent z-depth-0">
                    @Html.Raw(@ViewBag.Submenu2)
                    <a id="btnCloseWaterActivities" class="btn-floating btn-large waves-effect waves-light red right"><i class="material-icons">expand_less</i></a>
                </div>
            </div>
        </div>
        @RenderSection("featured", required: false)
        @RenderBody()
        @RenderSection("controls", required: false)
        @Html.Partial("_BookingEngineFormV2Partial")
        @Html.Partial("_ActivitiesSearchPartial")
    </main>
    <footer class="page-footer light-green darken-1">
        <div class="container">
            <div class="row">
                @Html.Raw(@ViewBag.Footer)
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Copyright &copy; @DateTime.Now.Year My Experience Tours. @ePlatFront.Resources.Views.Shared.SharedStrings.All_Rights_Reserved.
                <a class="grey-text text-lighten-4 right" href="@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Terms_Url">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Terms_and_Conditions</a><span class="right">&nbsp;&nbsp;&bull;&nbsp;&nbsp;</span><a class="grey-text text-lighten-4 right" href="@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Privacy_Policy_Url">@ePlatFront.Resources.Views.Shared.SharedStrings.Privacy_Policy</a>
            </div>
        </div>
    </footer>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    @Scripts.Render("~/Scripts/jquery.json-2.3.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bookingengine-1.5.js"></script>
    <script src="~/Scripts/bookingengine-ui-1.5.js"></script>
    <script src="/Content/themes/mex/js/language.@{@ViewBag.Culture}.js"></script>
    <script src="~/Scripts/storage-1.0.js"></script>
    <!-- Compiled and minified JavaScript -->
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js"></script>*@
    <script src="~/Content/plugins/materialize/js/materialize.js"></script>
    <script src="~/Content/themes/mex/js/ui2.js?v=181127"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
