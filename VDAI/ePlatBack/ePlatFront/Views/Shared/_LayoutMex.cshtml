<!DOCTYPE html>
<html lang="@ViewBag.Culture">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, user-scalable = no" />
        <title>@ViewBag.Title - My Experience Tours</title>
        @*<meta name="google-site-verification" content="IoFe3y2AupVOpWUdX6BHg83Puy6RqxXM-35Z_T8em6o" />*@
        <link href="~/content/themes/mex/images/favicon.png" rel="shortcut icon" type="image/x-icon" />
        <meta name="format-detection" content="telephone=no" />
        <meta name="keywords" content="@ViewBag.Keywords">
        <meta name="description" content="@ViewBag.Description">
        <meta name="robots" content="@ViewBag.Index, @ViewBag.Follow">
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        @Styles.Render("//fonts.googleapis.com/css?family=Open+Sans:400,700")
        @Styles.Render("~/themes/mex")
        <link href="/Content/plugins/scrollbar/jquery.mCustomScrollbar.css" rel="stylesheet" />
        @Styles.Render("~/Content/themes/base/datepicker")
        @RenderSection("header", required: false)
    </head>
<body onload="_googWcmGet('phone-desktop', '1-877-359-0443')">
    @RenderSection("afterBody", required: false)
    <header>
        <div class="content-wrapper header-container">
            <section id="topHeader">
                @Html.Raw(@ViewBag.Header)
                <div class="header-group">
                    <div id="showMenu" class="only-mobile">MENU</div>
                    <div id="divSearchBox" style="display:none;">
                        <input type="text" placeholder="@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Search_your_activities" id="txtSearch" />
                        <img id="btnSearch" src="~/Content/themes/mex/images/icon_search.png" alt="@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Search_your_activities" />
                        <div id="searchQuickResults" style="display:none;">
                            <div class="header">
                                <span id="btnCloseSearch" class="close-button">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Close</span>
                                @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Search_Results
                            </div>
                            <div class="container">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div>
                <p class="site-title">
                    <a href="/">
                        <img src="@ViewBag.Logo" class="logo-image" width="148" height="40" alt="Home" />
                    </a>
                </p>
            </div>
            <nav>
                <ul id="menu">
                    <li><a id="aLandActivities" href="#land-activities">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Land_Activities</a></li>
                    <li><a id="aWaterActivities" href="#water-activities">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Water_Activities</a></li>
                    <li style="display:none;"><a href="/transportation">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Transportation</a></li>
                    <li style="display:none;"><a href="/car-rental">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Car_Rental</a></li>
                    <li style="display:none;"><a href="/travel-guide">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Travel_Guide</a></li>
                    <li><a id="aShoppingCart" href="#shopping-cart">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Shopping_Cart</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <section id="body">
        <div id="sub-land-activities" class="submenu" style="display:none;">
            <div class="submenu-categories">
                @Html.Raw(@ViewBag.Submenu1)
            </div>
            <div class="submenu-banner">
                <div class="banner-slider" data-group="7"></div>
            </div>
        </div>
        <div id="sub-water-activities" class="submenu" style="display:none;">
            <div class="submenu-categories">
                @Html.Raw(@ViewBag.Submenu2)
            </div>
            <div class="submenu-banner">
                <div class="banner-slider" data-group="9"></div>
            </div>
        </div>
        <div id="sub-shopping-cart" class="submenu" style="display:none;">
            <div id="divTotals">
                <div class="totals">
                    <div class="totals-payment">
                        <span class="label">Total</span>
                        <span id="lblTotal" class="value">$0</span>
                    </div>
                    <div class="totals-savings">
                        <span class="secondary-label">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Savings</span>
                        <span id="lblSavings" class="secondary-value">$0</span>
                    </div>
                    <a href="#checkout" id="btnGoCheckout" class="primary-button">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Go_to_Checkout</a>
                    <a href="#checkout" id="btnGoCheckout2" class="primary-button" tabindex="11" style="display:none;">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Continue</a>
                </div>
                <div class="message">
                    <span class="message-label">
                        Don't you have your transportation yet?<br /><a href="/transportation">Click here</a> to book it!
                    </span>
                    <span class="interaction-message error" style="display:none;"></span>
                </div>
            </div>
            <div id="purchase-process">
                <div id="step1" class="step">
                    <div id="divPlannerSchedule">
                        <div class="main-content">
                            <h2>@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Shopping_Cart</h2>
                            <div id="divScheduleContainer">
                                <div id="divScheduleTable"></div>
                            </div>
                        </div>
                    </div>
                    <div class="planner-right-panel">
                        <div id="divAddActivityBg"></div>
                        <div id="divAddActivity" style="display:none;">
                            <img src="/content/themes/mex/images/loadingAnimation.gif" class="working" />
                            <input type="hidden" id="ServiceType" />
                            <div class="booking">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Booking...</div>
                            <div class="editor">
                                @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Select_a_Date
                                <div class="editor-field">
                                    <input type="text" class="date" id="ActivityDate" readonly="readonly" placeholder="yyyy-mm-dd" />
                                </div>
                            </div>
                            <div class="editor">
                                @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Choose_a_Time
                                <div class="editor-field fixed-time">
                                    <select id="ActivitySchedule"></select>
                                </div>
                                <div class="editor-field flexible-time" style="display:none;">
                                    <input class="date" type="text" id="ActivityFlexibleSchedule" placeholder="HH:mm" /><label for="ActivityFlexibleSchedule"><img src="~/Content/themes/mex/images/icon_timepicker.jpg" /></label>
                                </div>
                            </div>
                            <div id="divTransportation" style="display:none;">
                                <div id="divOffersRoundTrip" class="editor-double" style="display:none;">
                                    @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Round_Trip
                                    <div class="editor-field">
                                        <input type="radio" id="RoundTrue" name="Round" value="true" /><label for="RoundTrue">@ePlatFront.Resources.Views.Shared.SharedStrings.Yes</label>
                                        <input type="radio" id="RoundFalse" name="Round" value="false" /><label for="RoundFalse">@ePlatFront.Resources.Views.Shared.SharedStrings.No</label>
                                    </div>
                                </div>
                                <div class="editor-double" id="divTransportationHotel">
                                    @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Hotel
                                    <div class="editor-field">
                                        <select id="TransportationHotelID"></select>
                                    </div>
                                </div>
                                <div class="editor-double" id="divTransportationZone" style="display: none;">
                                    @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Zone
                                    <div class="editor-field">
                                        <select id="TransportationZoneID"></select>
                                    </div>
                                </div>
                                <div class="editor">
                                    @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Arrival_Airline
                                    <div class="editor-field">
                                        <input type="text" id="TransportationAirline" />
                                    </div>
                                </div>
                                <div class="editor">
                                    @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Arrival_Flight
                                    <div class="editor-field">
                                        <input type="text" id="TransportationFlight" />
                                    </div>
                                </div>
                                <div id="divRoundTrip" style="display:none;">
                                    <div class="editor">
                                        @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Departure_Date
                                        <div class="editor-field">
                                            <input type="text" id="RoundDate" class="date" />
                                        </div>
                                    </div>
                                    <div class="editor">
                                        @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Departure_Airline
                                        <div class="editor-field">
                                            <input type="text" id="RoundAirline" />
                                        </div>
                                    </div>
                                    <div class="editor">
                                        @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Departure_Flight
                                        <div class="editor-field">
                                            <input type="text" id="RoundFlightNumber" />
                                        </div>
                                    </div>
                                    <div class="editor">
                                        @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Departure_Transportation_Time
                                        <div class="editor-field">
                                            <input type="text" id="RoundMeetingTime" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="editor-double">
                                @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_How_many
                                <div class="trheader">
                                    <div class="td-qty">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Qty</div>
                                    <div class="td-unit">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Unit</div>
                                    <div class="td-price">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Price</div>
                                    <div class="td-totals">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Totals</div>
                                </div>
                                <div id="ActivityDetails">

                                </div>
                                <div class="trbody">
                                    <div class="td-total">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Activity_Total</div>
                                    <div id="ActivityTotal" class="td-totals">$0</div>
                                    <input type="hidden" id="ActivitySavings" />
                                </div>
                            </div>
                            <br />
                            <a href="#add-activity" id="btnAddActivity" class="primary-button">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Book</a>
                            <a href="#cancel-activity" id="btnCancelBooking" class="secondary-button">@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Close</a>
                        </div>
                    </div>
                </div>
                @Html.Partial("_PurchaseProcessPartial", new ePlatBack.Models.ViewModels.PurchaseProcessViewModel())
                <div id="step4" class="step" style="display:none;">
                    <div class="main-content">
                        <h2>@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Reservation_Request_Confirmation</h2>
                        <p><strong>@ePlatFront.Resources.Views.Shared.SharedStrings.Mex_RRC_Text1 <span id="lblConfirmationCode"></span> @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_RRC_Text2 <span id="lblConfirmationTotal"></span> @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_RRC_Text3</strong></p>
                        <p>@Html.Raw(ePlatFront.Resources.Views.Shared.SharedStrings.Mex_RRC_Text4)</p>

                        <p>@Html.Raw(ePlatFront.Resources.Views.Shared.SharedStrings.Mex_RRC_Text5)</p>
                    </div>
                </div>
            </div>
        </div>
        <section class="main-header">
            @RenderSection("featured", required: false)
        </section>
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
        @RenderSection("controls", required: false)
    </section>
    <footer>
        <div class="content-wrapper">
            <p>
                @ePlatFront.Resources.Views.Shared.SharedStrings.Mex_Copyright &copy; @DateTime.Now.Year My Experience Tours. @ePlatFront.Resources.Views.Shared.SharedStrings.All_Rights_Reserved.<br />
                @Html.Raw(@ViewBag.Footer)
            </p>
        </div>
    </footer>


    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="/Content/themes/mex/js/language.@{@ViewBag.Culture}.js"></script>
    <script src="/Content/plugins/scrollbar/jquery.mCustomScrollbar.concat.min.js"></script>
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/mex")

    @*<script src="/Scripts/jquery.easing.1.3.min.js"></script>
        <script src="/Scripts/jquery.ui.touch-punch.min.js"></script>
        <script src="/Scripts/jquery.ba-throttle-debounce.min.js"></script>
        <script src="/Content/plugins/hashchange/jquery.ba-hashchange.min.js"></script>
        <script src="/Content/plugins/fancybox/jquery.fancybox.pack.js"></script>
        <script src="/Scripts/jquery.json-2.3.min.js"></script>
        <script src="/Scripts/controls.js"></script>
        <script src="/Scripts/bookingengine-1.0.js"></script>
        <script src="/Content/themes/mex/js/ui.js"></script>*@

    @RenderSection("scripts", required: false)
</body>
</html>
